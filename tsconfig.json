{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "allowJs": true,
    "jsx": "react", 
    "lib": ["ES2021"],
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "out",
    "types": ["node", "mocha", "vscode"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*",
    "src/server/extension.ts",
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}