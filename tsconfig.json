{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react", 
    "lib": ["ES2021"],
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "out",
    "types": ["node", "mocha", "vscode"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "**TODO_parser.typescript.ts",
    "src/server/TODO_parser.typescript.ts"
  ]
}